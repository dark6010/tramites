
extends layout
block content
  h1.text-center Formulario de Solicitud de convalidacion de materias Externas
  form(method="POST", action='solicitud_de_convalidacion_de_materias_externas')
    row
      .col-md-6.col-xs-6
        row
          .col-md-3.col-xs-3.text-right
            label(for='nombre') nombre:
          .col-md-9.col-xs-9.text-left
            input#nombre(type='text', name='nombre', required)
        row(style="width:100%")
          col-md-3.col-xs-3.text-right
            label(for='carrera') de la carrera:
          .col-md-9.col-xs-9
            input#carrera(type='text', name='carrera', required)
        row(style="width:100%")
          col-md-3.col-xs-3.text-right
            label(for='universidad') de la univ.:
          .col-md-9.col-xs-9
            input#universidad(type='text', name='universidad', required)
        row
          .col-md-12.col-xs-12
        row(style="width:100%")
          col-md-3.col-xs-3.text-right
            label(for='acarrera') a la carrera:
          .col-md-9.col-xs-9
            select#acarrera( name='acarrera', required)
              for dato,index in carreras
                option(value=dato)= dato
        row
          .col-md-12.col-xs-12
        row
          .col-md-3.col-xs-3.text-right
            label(for='ci') ci:
          .col-md-9.col-xs-9
            input#ci(type='text', name='ci')
        row
          .col-md-3.col-xs-3.text-right
            label(for='pasaporte') pasaporte:
          .col-md-9.col-xs-9
            input#pasaporte(type='text', name='pasaporte')
        
      .col-md-6.col-xs-6
        row(style="width:100%")
          col-md-3.col-xs-3.text-right
            label(for='facultad') a la facultad:
          .col-md-9.col-xs-9
            select#facultad( name='facultad', required)
              for dato,index in facultad
                option(value=dato)= dato
        row
          .col-md-12.col-xs-12
        row
          .col-md-3.col-xs-3.text-right
            label(for='ciudado') ciudad origen:
          .col-md-9.col-xs-9
            input#ciudado(type='text', name='ciudado', required)
        row
          .col-md-3.col-xs-3.text-right
            b orgn. Asigts.:
          .col-md-9.col-xs-9.text-left
            label(for="ocmf") Otra carrera y facultad del sistema universitario
            input(type="radio", name="tipo", value="Otra carrera y facultad del sistema universitario", required, id="ocmf")
            label(for="ofmu") Universidad extranjera
            input(type="radio", name="tipo", value="Universidad extranjera", required, id="ofmu")
        row
          .col-md-3.col-xs-3.text-right
            b sexo:
          .col-md-9.col-xs-9.text-left
            label(for="sexom") masculino
            input(type="radio", name="sexo", value="1", required, id="sexom")
            label(for="sexof") femenino
            input(type="radio", name="sexo", value="0", required, id="sexof")
        
    row
      .col-md-12.col-xs-12.text-right
    row
      .col-md-3.col-xs-3.text-right 
        br
        input(type='hidden', name='serial', value= user.serial)
        input(type='submit', name='enviar', value='enviar')
