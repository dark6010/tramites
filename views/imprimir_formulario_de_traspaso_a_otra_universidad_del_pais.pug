extends layout

block content
  row
    .col-md-2.col-xs-2
      img(src="/images/logo-umss.png", width='100%')
    .col-md-7.col-xs-7.text-center
      h3.clear UNIVERSIDAD MAYOR DE SAN SIMÓN
      h3.clear VICERRECTORADO
      h3.clear DPTO. REGISTROS E INSCRIPCIONES
      br
      br
      br
    .col-md-3.col-xs-3.text-right
      h2 FOR. 11
      h3.text-center 
        b Nº#{body.serial}
      #qrcode(style="width: 60%; float:right")
      script.
        var t="emitido por:  #{user.name} \n"
        t+="fecha: #{body.day}/#{body.month+1}/#{body.year} \n"
        t+="para: #{body.nombre}"
        new QRCode(document.getElementById("qrcode"), t)
  row(style="width:100%")
    .col-md-12.col-xs-12
    .col-md-1.col-xs-1
      
