      h2 FOR. 05
      h3.text-center 
        b Nº#{body.serial}
      #qrcode(style="width: 60%; float:right")
      script.
        var t="emitido por:  #{user.name} \n"
        t+="fecha: #{body.day}/#{body.month+1}/#{body.year} \n"
        t+="para: #{body.nombre}"
